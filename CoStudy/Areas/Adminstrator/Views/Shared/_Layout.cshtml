<!DOCTYPE html>
<html>
<head>
	<title>Admin Dashboard</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<!-- Bootstrap -->
	<link href="~/Dashboard/bootstrap/css/bootstrap.min.css" rel="stylesheet">
	<!-- styles -->
	<link href="~/Dashboard/css/styles.css" rel="stylesheet">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
	<link rel="icon" type="image/x-icon" href="~/images/favicon.png" />
	<link rel="stylesheet" href="~/css/indexstyles.css">


</head>
<body>
	<header>
		<a href="index.html"><img src="~/images/logo.png" alt="website-logo" width="160em" height="120em" /></a>
		<div class="nav top">

			@if (User.Identity!.IsAuthenticated)
			{
				<a  style=" color:white;
    background-color: #366CC7;
    border-radius: 25px;">@User.Identity.Name</a>
				<a asp-action="Logout" asp-controller="Account" asp-area="">LOGOUT</a>

				<a href="#about">ABOUT</a>
				<a href="#services">SERVICES</a>
				<a asp-action="Index" asp-controller="Home" asp-area="">HOME</a>



			}
			else
			{

				<a asp-action="Register" asp-controller="Account">SIGN UP</a>
				<a asp-action="Login" asp-controller="Account">LOG IN</a>
				<a href="#about">ABOUT</a>
				<a href="#services">SERVICES</a>
				<a asp-action="Index" asp-controller="Home">HOME</a>


			}

		</div>
	</header>

	<div class="page-content">
		<div class="row">
			<div class="col-md-2">
				<div class="sidebar content-box" style="display: block;">
					<ul class="nav">
						<!-- Main menu -->

						<li><a asp-action="Index" asp-controller="Courses"><i class="glyphicon glyphicon-calendar"></i> University Courses</a></li>
						<li><a asp-action="Index" asp-controller="OnlineCourses"><i class="glyphicon glyphicon-calendar"></i> Online Courses</a></li>
						<li><a asp-action="Index" asp-controller="Books"><i class="bi bi-book"></i> Books</a></li>
						<li><a asp-action="Index" asp-controller="Skills"><i class="bi bi-star-fill"></i> Skills</a></li>


						@*<li class="submenu">
							<a href="#">
								<i class="glyphicon glyphicon-list"></i> Pages
								<span class="caret pull-right"></span>
							</a>
							<!-- Sub menu -->
							<ul>
								<li><a href="login.html">Login</a></li>
								<li><a href="signup.html">Signup</a></li>
							</ul>
						</li>*@
					</ul>
				</div>
			</div>
			<div class="col-md-10">

				<div class="row">


					<div class="content-box-large">
						@RenderBody()



					</div>
				</div>
			</div>
		</div>
	</div>

	<footer>
		<div class="container">

			

		</div>
	</footer>

	<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
	<script src="https://code.jquery.com/jquery.js"></script>
	<!-- Include all compiled plugins (below), or include individual files as needed -->
	<script src="bootstrap/js/bootstrap.min.js"></script>
	<script src="js/custom.js"></script>
</body>
</html>