@model LoginViewModel


@{


    ViewData["Title"] = "Login";
    Layout = null;
}





<!DOCTYPE html>
<html lang="en">
<!--colors: //366CC7 blue //dark gray 898C96 //gray ADAEB3-->
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
    <link rel="icon" type="image/x-icon" href="~/images/favicon.png" />
    <link rel="stylesheet" href="~/css/regester.css">
    <title>CoStudy</title>
</head>
<body>
    <!--sign in form-->
    <img src="~/images/logo.png" alt="website-logo" width="130em" height="100em" />
    <div class="wrap-login100 main">
        <p class="font"> Log In </p>
        <form asp-action="Login" asp-controller="Account" method="post">
            <div asp-validation-summary="All" class="text-danger" style="color:darkred;"></div>
            <div class="container">
                <div>

                    <label asp-for="UserNameOrEmail"><b>Username/Email</b></label>
                    <input asp-for="UserNameOrEmail" placeholder="Enter Username" required>
                    <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>

                </div>
                
                <div>

                    <label asp-for="Password"><b>Password</b></label>
                    <input type="password" asp-for="Password" placeholder="Enter Password" required>
                    <span asp-validation-for="Password" class="text-danger"></span>

                </div>
                <a asp-action="ForgotPassword" asp-controller="Account"> forgot passsword?</a>

                <div>

                    <input type="submit" value="Login" style="background-color: #366CC7; cursor:pointer;color:white;" />

                </div>
               
               @* <i class="bi bi-eye-slash eye" id="togglePassword"> </i>
                <button type="submit" >Login</button>
                <a href="#"> forget password? </a>*@
                <p class="text"> Create an account- <a asp-action="Register" asp-controller="Account"> Sign Up </a> </p>
            </div>
        </form>
    </div>
    <!--end of sign in form-->
  
</body>
</html>


