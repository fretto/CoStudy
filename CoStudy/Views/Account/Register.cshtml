@model CoStudy.Models.ViewModels.RegisterViewModel


@{

    ViewData["Title"] = "Register";
    Layout = null;
}






<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
    <link rel="icon" type="image/x-icon" href="~/images/favicon.png" />
    <link rel="stylesheet" href="~/css/regester.css">
    <title>CoStudy</title>
</head>
<body>
    <!--register form-->
    <img src="~/images/logo.png" alt="website-logo" width="130em" height="100em" />
    <div class="wrap-login100 main">
        <p class="font"> Sign UP </p>
        <form asp-action="Register" asp-controller="Account" method="post">

            <div asp-validation-summary="All" class="text-danger" style="color:darkred;"></div>
            <div class="container">

                <div>
                    <label asp-for="FirstName"><b>First Name</b></label>
                    <input asp-for="FirstName" placeholder="Enter First Name" required>
                    <span asp-validation-for="FirstName" class="text-danger" style="color:darkred;"></span>
                </div>
                
                <div>

                    <label asp-for="LastName"><b>Last Name</b></label>
                    <input asp-for="LastName" placeholder="Enter Last Name" required>
                    <span asp-validation-for="LastName" class="text-danger" style="color:darkred;"></span>

                </div>

                <div>
                    <label asp-for="Email"><b>Email</b></label>
                    <input asp-for="Email" placeholder="Enter Your Email"  required>
                    <span asp-validation-for="Email" class="text-danger" style="color:darkred;"></span>

                </div>
                
                <div>

                    <label asp-for="UserName"><b>Username</b></label>
                    <input asp-for="UserName" placeholder="Enter Username" name="username" required>
                    <span asp-validation-for="UserName" class="text-danger" style="color:darkred;"></span>

                </div>
                

                @*<div>

                    <label asp-for="major"><b>Major</b></label>
                    <select style="width: 100%;padding: 0.75em 1.25em;margin: 0.5em 0;display: inline-block;border: 0.063em solid #ccc;box-sizing: border-box;"
                    asp-items="Html.GetEnumSelectList<CoStudy.Models.Enums.Major>()">

                        <option value="-1">Select your major</option>

                    </select>



                </div>*@
                <div>

                    <label asp-for="Password"><b>Password</b></label>
                    <input asp-for="Password" placeholder="Enter Password" required>
                    <span asp-validation-for="Password" class="text-danger" style="color:darkred;"></span>

                </div>
                <div>

                    <label asp-for="ConfirmPassword"><b>Confirm Password</b></label>
                    <input asp-for="ConfirmPassword" placeholder="confirm password" required>
                    <span asp-validation-for="ConfirmPassword" class="text-danger" style="color:darkred;"></span>

                </div>
                <div class="form-group">
                    <input type="submit" value="Sign Up" style="background-color: #366CC7; cursor:pointer; color:white;"  />
                </div>
                

@*               <i class="bi bi-eye-slash eye" id="togglePassword"> </i>
                <a asp-action="Register" asp-controller="Account" class="btn btn-primary">Sign Up</a>
*@              <p> Already have an account?- <a asp-action="Login" asp-asp-controller="Account"> Log In </a> </p>
            </div>
        </form>
    </div>
    @*<script type="text/javascript" src="function.js">
        viewpassword();    //js function to view the password when user clicks the eye icon
    </script>*@
</body>
</html>




